{
  "manifest_version": 3,
  "name": "ShopReview Finder",
  "version": "1.0.0",
  "description": "Get shop reviews from copied text",

  "permissions": [
    "storage",
    "clipboardRead"
  ],

  "host_permissions": [
    "http://localhost:5000/*",
    "http://127.0.0.1:5000/*"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "ShopReview Finder"
  }
}